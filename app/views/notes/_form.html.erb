<%= form_for([@course, @note]) do |f| %>

  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>
      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :course_id, :value => @course.id %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :day %>
    <%= f.text_field :day, :class => :datepicker %>
  </div>  
  
  <% unless @note.new_record? %>
    <button id='reset_note_body'>
      Reset Note
    </button>
    <button id='save_now'>
      Save Note
    </button>
    <div class="field left">
      <%= f.text_area :body %>
    </div>
    <div class="showdown preview right">
      <%= @note.body %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
